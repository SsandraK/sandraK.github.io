<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
<section 
id="contact" 
class=" animate-fade-up flex justify-center mx-auto py-16 xl:w-[80%] sm:w-full xs:w-[75%]">
  <div class="sm:w-[50%] xs:w-full">
    <h2 class="text-5xl w-fit font-bold mb-3 bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-green-500 to-green-900">Contact Me</h2>
    <p class="text-gray-600 dark:text-gray-300 mb-6">Feel free to reach out for collaboration or chat anytime!</p>
    <p class="text-gray-600 dark:text-gray-300 mb-6">or find me in Linkedin 
      <a href="https://www.linkedin.com/in/sandra-kannik-8a763b13a/" target="_blank" class="hover:scale-110 transition-transform">
        <box-icon type="logo" name="linkedin" color="currentColor" size="mb-6"></box-icon>
      </a>
    </p>
   
    <form id="form"  autocomplete="off" class="flex flex-col py-2 mt-1">

      <label for="from_name" class="font-bold text-black dark:text-white opacity-90">
        Name
      </label>
      <input 
        type="text" 
        class="bg-transparent border-2 border-black dark:border-white placeholder:text-grey dark:placeholder:text-white px-3 py-2 rounded-md mb-3 md:w-[80%] xs:w-full"
        name="from_name" 
        id="from_name"
        placeholder="What is your name?" 
      >

      <label for="" class="font-bold text-black dark:text-white opacity-90">
        Message
      </label>
      <input 
        type="text" 
         name="message" 
         id="message"
        class="bg-transparent border-2 border-black dark:border-white placeholder:text-grey dark:placeholder:text-white px-3 py-2 rounded-md mb-3 md:w-[80%] xs:w-full"
        placeholder="Type here ..."
      >
      <button id="submitButton" type="button" disabled class="border-2 border-grey-400 rounded-md bg-gray-300 text-gray-500 cursor-not-allowed w-fit px-10 py-1 my-6 transition-all">
        Submit <box-icon name="send" class="py-1"></box-icon>
    </button>
    
    
    </form>


    <!-- Email Sent Pop-Up -->
<div id="popupContainer" 
class="hidden fixed inset-0 flex items-center justify-center bg-opacity-50 backdrop-blur-md transition-opacity duration-300 ease-in-out">
<div class="bg-white dark:bg-gray-900 text-center p-6 rounded-lg shadow-lg w-[90%] max-w-sm">

<h3 class="text-xl font-semibold text-black dark:text-white">âœ… Email Sent!</h3>
<p class="text-gray-600 dark:text-gray-300 mt-2">Thank you for reaching out!</p>

<button id="closePopup" 
       class="mt-4 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded-md">
 OK
</button>

</div>
</div>

    
  </div>

<img src="/images/apple.png" alt="Apple logo" class="h-[220px] self-center md:w-[20%] xs:w-[10%] max-w-xs dark:invert"/>

 </section>
 <script src="../assets/sendEmail.js"></script>


---
interface Props {
    text: string;
    logo: string;
}

const { text, logo } = Astro.props;
---

<div class="flex items-center gap-4 px-6 py-4 
            bg-white dark:bg-gray-900 
            shadow-md dark:shadow-lg 
            rounded-xl border border-gray-200 dark:border-gray-700
            transition-transform transform hover:scale-105 hover:shadow-xl dark:hover:shadow-2xl
            cursor-pointer hover-glow">
  
  {logo.startsWith("bx ") ? (
    <i class={`${logo} text-5xl text-gray-700 dark:text-gray-300 transition-colors duration-300`}></i>
  ) : (
    <img src={logo} alt={text} class="h-12 w-12 filter dark:invert transition-transform duration-300" />
  )}

  <span class="text-xl font-bold bg-clip-text text-transparent 
              bg-gradient-to-r from-gray-700 via-gray-500 to-gray-300 
              dark:from-gray-200 dark:via-gray-400 dark:to-gray-100 
              transition-all duration-300">
    {text}
  </span>
</div>

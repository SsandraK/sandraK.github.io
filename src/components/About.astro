---
import "../assets/style.css"; 
---

<section 
  id="aboutme"
  data-aboutme
  class="cursor-pointer mx-auto flex flex-col lg:flex-row justify-center items-center mb-16 scroll-mt-36 lg:w-[80%] lg:px-12 mt-32 md:mt-40 lg:mt-48"
>
  <!-- Image Layers -->
  <div 
    id="images"
    class="relative w-[300px] h-[350px] sm:w-[400px] sm:h-[450px] lg:w-[450px] lg:h-[500px] opacity-0 animate-text-reveal"
  >
    <img 
      id="img1"
      src="/mac.png"
      alt="Mac"
      class="absolute top-0 left-0 w-full h-full object-cover rounded-xl opacity-20 z-10 rotate-[-8deg] blur-[3px]"
    />
    <img 
      id="img2"
      src="/images/group_tennis.jpeg"
      alt="Group Tennis"
      class="absolute top-3 left-3 w-full h-[96%] object-cover rounded-xl shadow-lg opacity-50 z-20 rotate-[-6deg] transition-transform duration-500 hover:scale-105 hover:rotate-0"
    />
    <img 
      id="img3"
      src="/images/singing.png"
      alt="Singing"
      class="absolute top-6 left-6 w-full h-[92%] object-cover rounded-xl shadow-xl opacity-65 z-30 rotate-[-4deg] transition-transform duration-500 hover:scale-110 hover:rotate-1"
    />
    <img 
      id="img4"
      src="/images/travel1.png"
      alt="Travel"
      class="absolute top-10 left-10 w-[88%] h-[88%] object-cover rounded-xl shadow-2xl opacity-80 z-40 rotate-[-2deg] transition-transform duration-500 hover:scale-115 hover:rotate-2"
    />
    <img 
      id="imgMe"
      src="/images/me.png"
      alt="Me"
      class="absolute top-14 left-14 w-[95%] h-[95%] object-cover rounded-2xl shadow-3xl opacity-100 z-50 rotate-0 transition-transform duration-500 hover:scale-120 hover:rotate-3 float-animation"
    />
  </div>

  <!-- Text Content -->
  <div 
    class="relative lg:ml-20 mt-10 lg:mt-0 max-w-lg text-gray-700 dark:text-gray-300 text-lg leading-relaxed opacity-0 animate-text-reveal delay-600 px-6 md:px-0"
  >
    <div class="flex flex-col items-start text-left space-y-6">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-gray-800 dark:text-white drop-shadow-lg leading-tight">
        Hello, I'm  
        <span class="bg-gradient-to-r from-blue-400 via-green-500 to-green-900 bg-clip-text text-transparent inline-block">
          Sandra!
        </span>
      </h1>

      <p class="animate-fade-in-up">Welcome to my portfolio page!</p>
        
      <p>
        I'm a <span class="font-semibold text-blue-500">software developer</span>  
        with a passion for building innovative and user-friendly  
        <span class="font-semibold text-green-500">mobile applications</span>.   
      </p>

      <!-- Icons -->
<div class="flex flex-wrap gap-10 mt-6 text-gray-700 dark:text-gray-300 w-full pointer-events-none select-none">
  
  <!-- Experience -->
  <div class="flex flex-col items-start">
    <svg class="w-12 h-12 text-blue-500 dark:text-green-400 mb-1" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm1.31-4.72c-.23.63-.68 1.16-1.31 1.42V16h-2v-1c-.63-.26-1.08-.79-1.31-1.42-.3-.84-.11-1.79.47-2.46l.76-.91V9h2v2.21l.76.91c.58.67.77 1.62.47 2.46z"></path>
    </svg>
    <p class="text-xl font-bold">2+ Years</p>
    <p class="text-sm">Experience</p>
  </div>

  <!-- Projects -->
  <div class="flex flex-col items-start">
    <svg class="w-12 h-12 text-blue-500 dark:text-green-400 mb-1" fill="currentColor" viewBox="0 0 24 24">
      <path d="M4 4h16v2H4zm0 4h10v2H4zm0 4h16v2H4zm0 4h10v2H4z"></path>
    </svg>
    <p class="text-xl font-bold">20+</p>
    <p class="text-sm">Projects Completed</p>
  </div>

  <!-- Languages -->
  <div class="flex flex-col items-start">
    <svg class="w-12 h-12 text-blue-500 dark:text-green-400 mb-1" fill="currentColor" viewBox="0 0 24 24">
      <path d="M2 3h20v2H2zm0 16h20v2H2zm4-8h12v2H6zm0 4h12v2H6z"></path>
    </svg>
    <p class="text-xl font-bold">3+</p>
    <p class="text-sm">Programming Languages</p>
  </div>

</div>


  </div>
</section>


<!-- About Me Modal -->
<div
  id="aboutme-modal"
  data-aboutme-modal
  class="fixed inset-0 overflow-y-auto items-start justify-center pt-24 bg-black/70 z-[100] hidden opacity-0 transition-opacity duration-300"
>
<div
  id="about-modal"
  data-aboutme-stop
  class="relative w-11/12 max-w-5xl h-[85vh] overflow-y-auto flex flex-col justify-start items-center gap-8 
  bg-gradient-to-b from-white to-orange-300/90 
  dark:from-black dark:to-orange-300/90
  p-6 md:p-10 lg:p-12 xl:p-16 
  rounded-lg shadow-lg transform scale-95 transition-transform duration-400"
>

    <h2 class="text-gray-700 dark:text-white text-4xl font-bold text-center">Welcome!</h2>

    <div id="about-info" class="text-gray-500 dark:text-white text-lg text-center md:text-left max-w-3xl leading-relaxed">
    </div>
  </div>
</div>



<script src="/src/assets/modal.js" defer></script>
